{
	"compilerOptions": {
		"typeRoots": ["types", "node_modules/@types"],
		"lib": ["es2016", "dom"],
		"strict": true,
		"module": "commonjs",
		"target": "es6",
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["types/*", "src/**/*"],
	"exclude": ["src/*.test.ts"]
}
